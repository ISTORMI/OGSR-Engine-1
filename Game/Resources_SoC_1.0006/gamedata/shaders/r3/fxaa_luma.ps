#include "common.h"
#define	LUMINANCE_VECTOR float3(0.299f, 0.587f, 0.114f)

Texture2D 	s_base0;

struct	v2p
{
	float2 	Tex0	: TEXCOORD0;
	float4 	HPos	: SV_Position;
};

float4 main( v2p I ) : SV_Target
{
	float4 img = s_base0.Load(int3(I.HPos.xy, 0), 0);
	img.a = sqrt(dot(img.rgb, LUMINANCE_VECTOR));
	return img;
}
